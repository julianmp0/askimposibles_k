<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.androingenio.askimposibles.InsertPreguntaActivity"
    tools:showIn="@layout/activity_insert_pregunta"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txtInsertPregunta"
        android:fontFamily="@font/f3"
        android:textColor="@color/white"
        android:textSize="@dimen/textSizeInsert"
        android:layout_margin="15dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:textColor="@color/azul"
        android:hint="PRIMERA PREGUNTA"
        android:inputType="textCapCharacters"
        android:textColorHint="@color/azul"
        android:lines="1"
        android:fontFamily="@font/f3"
        android:textSize="@dimen/textSizeInsert"
        android:id="@+id/etPreguntaA"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="10dp"
        android:textColor="@color/rojo"
        android:hint="SEGUNDA PREGUNTA"
        android:inputType="textCapCharacters"
        android:textColorHint="@color/rojo"
        android:layout_marginTop="1dp"
        android:fontFamily="@font/f3"
        android:textSize="@dimen/textSizeInsert"
        android:id="@+id/etPreguntaB"
        />




</LinearLayout>
